<Window x:Class="variant4.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="250" Width="448">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="185">
        <TextBlock Text="Логин"/>
        <TextBox x:Name="txtLogin" Width="150"/>

        <TextBlock Text="Пароль" Margin="0,10,0,0"/>
        <PasswordBox x:Name="txtPassword" Width="150"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Войти" Width="80" Click="Login_Click"/>
            <Button Content="Регистрация" Width="80" Margin="10,0,0,0" Click="Register_Click"/>
            <Button Content="Выход" Width="80" Margin="10,0,0,0" Click="Exit_Click"/>

        </StackPanel>
    </StackPanel>
</Window>