<Window x:Class="variant4.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="350" Width="546">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Логин"/>
        <TextBox x:Name="txtLogin" Width="150"/>

        <TextBlock Text="Пароль" Margin="0,10,0,0"/>
        <PasswordBox x:Name="txtPassword" Width="150"/>

        <TextBlock Text="Фамилия" Margin="0,10,0,0"/>
        <TextBox x:Name="txtSurname" Width="150"/>

        <TextBlock Text="Имя" Margin="0,10,0,0"/>
        <TextBox x:Name="txtName" Width="150"/>

        <TextBlock Text="Телефон" Margin="0,10,0,0"/>
        <TextBox x:Name="txtPhone" Width="150"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Назад" Width="80" Click="Back_Click"/>
            <Button Content="Регистрация" Width="100" Margin="10,0,0,0" Click="Register_Click"/>
            <Button Content="Назад" Width="120" Margin="10,10,0,0" Click="Back_Click"/>
        </StackPanel>
    </StackPanel>
</Window>